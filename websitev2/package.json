{
  "name": "the-videogame-archive",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel eleventyDev typescriptDev",
    "test": "npm-run-all --parallel eleventyTest typescriptDev",
    "build": "npm-run-all eleventyBuild typescriptBuild",
    "debugBuild": "npm-run-all eleventyDebugBuild typescriptBuild",
    "eleventyDev": "set ENVIRONMENT=dev & eleventy --serve",
    "eleventyTest": "set ENVIRONMENT=test & eleventy --serve",
    "eleventyBuild": "set ENVIRONMENT=prod & eleventy",
    "eleventyDebugBuild": "set ENVIRONMENT=prod & set DEBUG=Eleventy* & eleventy > debug.txt 2>&1",
    "typescriptDev": "tsc --watch",
    "typescriptBuild": "python ./buildTools/typeScriptWatcher.py",
    "clean": "rmdir /s _site",

    "dev:site": "set ENVIRONMENT=dev & eleventy --serve",
    "dev:assets": "webpack --config webpack.config.dev.js",

    "prod:site": "set ENVIRONMENT=prod & eleventy",
    "prod:assets": "webpack --config webpack.config.prod.js"
  },
  "author": "Joey Schutz",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@types/node": "^20.5.1",
    "autoprefixer": "^10.4.15",
    "eleventy-plugin-postcss": "^1.0.4",
    "esbuild-register": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "pg": "^8.12.0",
    "postcss-import": "^15.1.0",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "^5.1.6"
  },
  "overrides": {
    "semver": ">=7.5.2"
  },
  "devDependencies": {
    "ts-loader": "^9.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  }
}
